<%- include('../partials/header') %>

<div class="main">
    <section>
        <div class="container">
            <h1>Create a Recipe</h1>
        </div>
    </section>
    <section>
        <div class="container">
            <form id="new-recipe" action="/recipes" method="POST">
                <label >Title:</label>
                <input type="text" name="title">

                <label >Roaster:</label>
                <input type="text" name="roaster">

                <label >Varietal:</label>
                <select name="beanVarietal">
                    <% bean.forEach(function(varietal, idx) { %>
                        <option value="<%= varietal %>" <%= idx === 0? 'selected' : '' %>>
                            <%= varietal %>
                        </option>
                    <% }); %>
                </select>
                
                <label >Process:</label>
                <select name="processMethod">
                    <% process.forEach(function(method, idx) { %>
                        <option value="<%= method %>" <%= idx === 0? 'selected' : '' %>>
                            <%= method %>
                        </option>
                    <% }); %>
                </select>
                
                <label >Roast Level:</label>
                <select name="roastLevel">
                    <% roast.forEach(function(level, idx) { %>
                        <option value="<%= level %>" <%= idx === 0? 'selected' : '' %>>
                            <%= level %>
                        </option>
                    <% }); %>
                </select>
                
                <label >Grind Size:</label>
                <select name="grindSize">
                    <% grind.forEach(function(size, idx) { %>
                        <option value="<%= size %>" <%= idx === 0? 'selected' : '' %>>
                            <%= size %>
                        </option>
                    <% }); %>
                </select>

                <label >Coffee(g):</label>
                <input type="number" name="gramsCoffee">

                <label >Water(g):</label>
                <input type="number" name="gramsWater">
                
                <label >Water Temp.:</label>
                <input type="number" name="waterTemp">
                <select name="tempUnit" id="tempUnit">
                    <option value="째F">째F</option>
                    <option value="째C">째C</option>
                    <option value="Kelvin">Kelvin</option>
                </select>
                
                <label >Notes:</label>
                <input type="text" name="notes">
            </form>

        </div>
    </section>
</div>


<%- include('../partials/footer') %>