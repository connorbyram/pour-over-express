<%- include('../partials/header') %>

<div class="main">
    <section>
        <div class="container">
            <h1>Browse Recipes</h1>
        </div>
    </section>
    <section>
        <div class="container">
            <% recipes.forEach(function(r) { %>
                <% if(r.public) { %>
                    <div class="recipe-preview">
                        <div id="user">
                            <img alt="avatar" id="user-img" src="<%= user.avatar %>" referrerpolicy="no-referrer">
                            <%= user.name %>
                        </div>
                        <h2><%= r.title %></h2>
                        <text id="date"><%= r.createdAt.toLocaleDateString() %></text>
                        <a href="/recipes/<%= r._id %>">DETAILS</a>
                    </div>
                <% } %>
            <% }); %>

        </div>
    </section>
</div>


<%- include('../partials/footer') %>